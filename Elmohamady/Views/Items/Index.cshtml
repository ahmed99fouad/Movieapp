@model IEnumerable<Item>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3 ">
<partial name="_Notifications" />
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary text-end ">Items View</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Items" asp-action="New" class="btn btn-primary">
                <i class="bi bi-plus"></i> &nbsp; Add New Item
            </a>
        </div>
    </div>


    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    Item Name
                </th>
                <th scope="col">
                    Item Price
                </th>
                <th scope="col">
                    Item Category
                </th>
                <th scope="col">
                    Item Images
                </th>
                
                 
                  <th scope="col">
                </th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-primary">
                    <td scope="row" width="30%">
                        @item.Name
                    </td>
                    <td width="20%">
                        @item.Price
                    </td>
                    <td width="20%">
                        @item.Category.Name
                    </td>
                    <td width="20%">
                        <img src="~/images/@item.imagePath" style="width:48px" class="img-thumbnail" />
                    </td>


                    <td class="text-end">
                        <a asp-controller="Items" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-success">
                                 <i class="bi bi-pencil"></i>
                           </a>
                        <a asp-controller="Items" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger">
                                  <i class="bi bi-trash3"></i>
                           </a>
                      </td>
                    
                </tr>
            }
        </tbody>
    </table>
</div>

